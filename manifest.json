{
  "name": "Git Diff Flex",
  "version": "1.2.2",
  "description": "Git Diff Flex adds a draggable pane bezel between two files when comparing diffs! Currently only for Github.",
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*/pull/*/files*",
        "*://github.com/*/*/pull/*/changes*",
        "*://github.com/*/*/commit/*",
        "*://github.com/*/*/compare/*",
        "*://*.github.com/*/*/pull/*/files*",
        "*://*.github.com/*/*/pull/*/changes*",
        "*://*.github.com/*/*/commit/*",
        "*://*.github.com/*/*/compare/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "128": "icon_128.png"
  },
  "action": {
    "default_title": "Git Diff Flex",
    "default_popup": "options.html"
  },
  "manifest_version": 3
}
